<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/fragmentFeed">
    <fragment
        android:id="@+id/fragmentFeed"
        android:name="ru.netology.nmedia.fragment.FeedFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed" >
        <action
            android:id="@+id/action_fragmentFeed_to_newPostFragment"
            app:destination="@id/newPostFragment" />
        <action
            android:id="@+id/action_fragmentFeed_to_showPostFragment"
            app:destination="@id/showPostFragment" />
        <action
            android:id="@+id/action_fragmentFeed_to_editFragment"
            app:destination="@id/editFragment" />
    </fragment>
    <fragment
        android:id="@+id/newPostFragment"
        android:name="ru.netology.nmedia.fragment.NewPostFragment"
        android:label="fragment_new_post"
        tools:layout="@layout/fragment_new_post" >
        <action
            android:id="@+id/action_newPostFragment_to_addVideoFragment"
            app:destination="@id/addVideoFragment" />

    </fragment>
    <fragment
        android:id="@+id/showPostFragment"
        android:name="ru.netology.nmedia.fragment.ShowPostFragment"
        android:label="show_post_fragment"
        tools:layout="@layout/fragment_show_post" >
        <action
            android:id="@+id/action_showPostFragment_to_editFragment"
            app:destination="@id/editFragment" />
    </fragment>
    <fragment
        android:id="@+id/addVideoFragment"
        android:name="ru.netology.nmedia.fragment.AddVideoFragment"
        android:label="fragment_add_video"
        tools:layout="@layout/fragment_add_video"
        />
    <fragment
        android:id="@+id/editFragment"
        android:name="ru.netology.nmedia.fragment.EditPostFragment"
        android:label="fragment_edit_post"
        tools:layout="@layout/fragment_edit_post"
        >
        <action
            android:id="@+id/action_editFragment_to_addVideoFragment"
            app:destination="@id/addVideoFragment" />
    </fragment>
</navigation>